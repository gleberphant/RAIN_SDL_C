{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file with SDL",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I${workspaceFolder}\\SDL3\\include",
                "-L${workspaceFolder}\\SDL3\\lib",
                "-lmingw32",
                "-lSDL3",
                "-lSDL3_ttf",
                "-lSDL3_image"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
        
    ],
    "version": "2.0.0"
}